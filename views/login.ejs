<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>MUSCLER</title>
        <link rel="stylesheet" href="/public/css/style.css">
    </head>
    <body>
        <div class="sign">
            <div class="container">
                <h1><a href="/list">MUSCLER</a></h1>
                <div class="panel">
                    <h2>ログイン</h2>
                    <% if (errors.length > 0) { %> 
                        <ul class="errors">
                            <% errors.forEach(error => { %>
                                <li><%= error %></li>
                            <% }); %>
                        </ul>
                    <% } %> 
                    <form action="/login" method="post">
                        <p>ユーザー名</p>
                        <input type="text" name="username">
                        <p>パスワード</p>
                        <input type="password" name="password">
                        <input class="btn btn-home" type="submit" value="ログイン">
                        <a class="btn" href="/news">ホームにもどる</a>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>